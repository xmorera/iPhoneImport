{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File with Arguments",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": [
                "This PC\\Apple iPhone\\Internal Storage",              // 'source' argument
                "C:\\iPhoneImport",         // 'destination' argument
                "--metadata-folder", "C:\\iPhoneImport\\import\\metadata",  // optional --metadata-folder
                "--skip-copy"                // optional flag --skip-copy
            ]
        }
    ]
}